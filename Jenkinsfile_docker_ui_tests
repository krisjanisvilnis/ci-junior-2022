pipeline {
    agent any
    parameters {
        string(name: 'ENVIRONMENT', defaultValue: 'DEV', description: 'Environment for test execution')
    }
    triggers {
        pollSCM('*/1 * * * *')
    }

    stages {
        stage('test') {
            steps {
                echo "Running UI tests on ${param.ENVIRONMENT} environment"
            }
        }
    }
}