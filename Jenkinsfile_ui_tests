pipeline {
    agent any
    parameters {
        string(name: 'ENVIRONMENT', defaultValue: 'DEV', description: 'Environment for test execution')
    }
    triggers {
        pollSCM('*/1 * * * *')
    }

    stages {
        stage('test') {
            steps {
                // echo "Running UI tests on ${params.ENVIRONMENT} environment"
                scripts {
                    def browsers = ['chrome', 'firefox']
                    for (int i = 0; i < browsers.size(); ++i) {
                        echo "Running UI tests on ${params.ENVIRONMENT} and the ${browsers[i]} browser"
                    }
                }
            }
        }
    }
}